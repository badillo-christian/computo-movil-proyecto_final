<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>

    <data>

    </data>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".screens.transactions.Credits">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:fitsSystemWindows="false"
                android:orientation="vertical"
                tools:behavior_hideable="true">


            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr"
                    android:layout_margin="20dp">

                <ImageView
                        android:id="@+id/btn_Back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_gravity="start|center"
                        app:tint="@color/green" />



                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:text="Creditos"/>

            </FrameLayout>


            <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/gray" />


            <androidx.legacy.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tarjeta 4152 3130 1212 3698 "
                    android:layout_marginStart="30dp"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"/>



            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_card"/>

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_transferencias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorFullWidth="false"
                    app:tabMode="fixed"/>

            <androidx.legacy.widget.Space
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

            <TextView
                    android:id="@+id/titulo_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crédito Hipotecario"
                    android:layout_marginStart="0sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:id="@+id/containerSaldos"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crédito #: 002362-2019"
                        android:layout_marginStart="0dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo Actual                                               -$ 1'752,040.09"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha próximo pago                                        23-12-2023"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Número de parcialidades cubiertas:             019 de 240"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descargar Corrida:                                  Noviembre 2023"
                        android:layout_marginStart="15dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="normal"/>
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>

            </LinearLayout>
            <LinearLayout
                    android:id="@+id/containerEC"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No existe crédito de Nomina Activo "
                        android:layout_marginStart="0dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                <androidx.legacy.widget.Space
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnNext4"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="text"
                        android:textSize="18sp"
                        android:background="@drawable/bg_btn_1"
                        android:text="Solicitar"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


</layout>
